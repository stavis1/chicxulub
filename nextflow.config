executor {
    name = 'slurm'
    queueSize = 96 //edit this
    account = 'username' //edit this
    jobName = {"${task.process}_${task.hash}"}
    submitRateLimit = '10sec'
}

singularity {
    enabled = true
    cacheDir = "$projectDir/cache/"
    autoMounts = true
}

process {
    //global options for all processes
    executor = 'slurm'
    errorStrategy = 'terminate' //'ignore'

    //edit these options for your account and cluster details
    //delete any option you don't need to use
    clusterOptions = "-N 1 --partition=partition_name --qos=quality_of_service --mail-type=ALL --mail-user=you@example.com"
    
    //process specific options
    //if you run into resource constriants change these values 
    withName: 'params_parser|collect_eggnog_search_jobs|qauantify_annotations' {
        cpus = 1
        memory = 8.GB
        time = '3h'
    }
    
    withName: 'merge_quantified_annotations' {
        cpus = 1
        memory = 32.GB
        time = '3h'
    }

    withName: 'comet|dinosaur|eggnog_db_setup' {
        cpus = 4
        memory = 16.GB
        time = '24h'
    }

    withName: 'percolator' {
        cpus = 3
        memory = 8.GB
        time = '24h'
    }

    withName: 'eggnog_search' {
        cpus = 10
        memory = 16.GB
        time = '24h'
    }

    withName: 'feature_mapper' {
        cpus = 4
        memory = 8.GB
        time = '24h'
    }
}
